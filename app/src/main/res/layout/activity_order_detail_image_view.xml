<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order_detail_image_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context="kr.o3selab.homecoco.Activities.OrderDetailImageView">

    <com.github.piasy.biv.view.BigImageView
        android:id="@+id/order_detail_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:optimizeDisplay="true" />

    <ImageView
        android:id="@+id/order_detail_image_save"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_download"
        android:tint="#55ffffff"/>

</FrameLayout>
